import graphics as gr
import math

SIZE_X = 500
SIZE_Y = 500

window = gr.GraphWin("Model", SIZE_X, SIZE_Y)

rectangle = gr.Rectangle(gr.Point(0, 0), gr.Point(SIZE_X, SIZE_Y))
rectangle.setFill('black')
rectangle.draw(window)


coords = gr.Point(300, 200)
velocity = gr.Point(-1, 1)
acceleration = gr.Point(0, 0)

circle = gr.Circle(coords, 10)
circle.setFill('blue')
circle.draw(window)

l = 10
g = 9.8
pi = 0


def move(point):
    circle.move(point.x,point.y)

def add(point_1, point_2):
    new_point = gr.Point(point_1.x + point_2.x,
                         point_1.y + point_2.y)

    return new_point


def update_coords(coords, velocity):
    return add(coords, velocity)


def update_velocity(point_1, point_2):
        new_point = gr.Point(point_1.x + point_2.x,
                             point_1.y + point_2.y)
        return new_point


def update_acceleration(point):
    a = -(g / l) * math.sin(pi)
    new_point = gr.Point(point.x + a, point.y + a)
    return new_point


while True:
    move(velocity)
    acceleration = update_acceleration(acceleration)
    coords = update_coords(coords, velocity)
    velocity = update_velocity(velocity, acceleration)

    gr.time.sleep(0.01)
