import turtle


turtle.shape('turtle')
turtle.speed(0)
turtle.penup()
turtle.goto(-200, 100)
turtle.pendown()



def dragon_curve(length, depth, sign = 1):
    if depth == 1:
        turtle.fd(length)
        return
    length = ((length ** 2) / 2) ** (0.5)
    turtle.rt(45*sign)
    dragon_curve(length, depth - 1, 1)
    turtle.lt(90*sign)
    dragon_curve(length, depth - 1, -1)
    turtle.rt(45*sign)


dragon_curve(200, 9)
turtle.done()

