N = int(input())
A = [0]*N + [0]
B = [0]*N + [0]
k = 1
for i in range(N):
    A[i] = int(input())
if max(A) == 0:
    print(max(A))
else:
    for i in range(N+1):
        if A[i] == A[i-1]:
            if A[i] == 1:
                k += 1
        if A[i] == 0:
            B[i] = k
            k = 1
    print(max(B))
